.card2 .card_footer_1
  color rgba(0,0,0,.5)
  flex-grow 1
  box-sizing border-box
  letter-spacing 0px
  padding-right .5rem
  font-size .875rem
  line-height 1.5


.loading 
  text-align: center
  position: fixed
  color: rgb(15, 150, 228)
  z-index: 9
  background: $purple
  padding: 8px 18px
  border-radius: 5px
  left: calc(50% - 45px)
  top: calc(50% - 18px)


.fade-enter-active, .fade-leave-active 
  transition: opacity .5s

.fade-enter, .fade-leave-to 
  opacity: 0

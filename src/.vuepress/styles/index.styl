.home .hero img
  max-width 450px!important

.card
  box-shadow rgba(0, 0, 0, 0.1) 0px 1px 5px, rgba(0, 0, 0, 0.1) 0px 1px 2px
  max-width 100%
  max-height 100% 
  margin-bottom 10px
  transition .15s all ease-in-out

.centered
  align-content: center
  text-align: center

.search_box_1
  flex: 0 0 auto;
  display: inline-block
  position: relative
  margin-right: 1rem
  white-space: nowrap
  font-size: 0.9rem
  line-height: 2.2rem

.search_box_1 input
  cursor: text
  width: 10rem
  height: 2rem
  color: #4e6e8e
  display: inline-block
  border: 1px solid #cfd4db
  border-radius: 2rem
  font-size: 0.9rem
  line-height: 2rem
  padding: 0 0.5rem 0 2rem
  outline: none
  transition: all 0.2s ease
  background: #fff url('/PluginRepository/assets/img/search.83621669.svg') 0.6rem 0.5rem no-repeat
  background-size: 1rem
  white-space: nowrap
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

.card a
  text-decoration none
  text-align left
  padding 12px
  color #3b3b3b
  font-size 24px
  display flex
  flex-direction column
  align-items left    

.smallcard
  font-size 10px
  padding 4px

.card2
  display flex
  padding-left .25rem
  padding-right .25rem
  padding-top 1rem
  padding-bottom .5rem
  border-color rgba(0,0,0,0.1)
  border-bottom-style solid
  border-bottom-width 1px

.card2 .div_1
  flex-grow 1

.card2 .div_2
  padding-right 1rem
  align-items flex-end
  flex-wrap wrap
  flex-direction row
  display flex

.card2 .img_1
  display none
  max-width 100%
  border-style none
  box-sizing border-box

.card2 .h3_class
  font-size 1.25rem
  text-decoration none
  margin 0
  color rgba(0,0,0,0.9)
  line-height 1
  font-weight 600
  display inline-block

.card2 .highlight_1
  background-color $duet3dMain
  margin-left 10px
  margin-bottom 10px
  letter-spacing 0.4px
  font-size .6rem
  padding-left .2rem
  padding-right .2rem
  padding-top .2rem
  padding-bottom .2rem
  color rgb(255, 255, 255)
  font-weight 600
  float left
  display inline-block
  border-radius .25rem
  box-sizing border-box

.card2 .description_1
  font-size 1rem
  text-decoration none
  margin-top .25rem
  margin-bottom 0
  padding-top .25rem
  padding-bottom .25rem
  color rgba(0,0,0,0.6)
  line-height 1.5
  box-sizing border-box

.card2 .keyword_1
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  margin-left 0
  margin-right 0
  margin-top .5rem
  margin-bottom .5rem
  padding 0
  width 90%
  list-style-type none
  box-sizing border-box

.card2 .keyword_list_1
  margin-left 0
  text-decoration none
  margin 0 7px 7px 0
  user-select none
  letter-spacing 0.4px
  font-size .7rem
  padding-left .5rem
